<mvc:View
    controllerName="delmex.bascula3.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    height="100%">
    <f:DynamicPage
        id="dynamicPage"
        headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox
                        width="100%"
                        justifyContent="Center"
                        alignItems="Center">
                        <Title
                            text="{i18n>title}"
                            level="H1"
                            textAlign="Center"
                            wrapping="true"
                            class="sapUiTinyMargin sapThemeHighlight-asColor"/>
                    </HBox>
                </f:heading>
                <f:actions>
                    <Button
                        id="toggleFiltersButton"
                        icon="sap-icon://pin"
                        tooltip="{i18n>toggleFilters}"
                        press="onToggleFilters"
                        type="Transparent"/>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                id="filterHeader"
                visible="true">
                <f:content>
                    <fb:FilterBar
                        id="filterBar"
                        useToolbar="true"
                        search="onSearch"
                        reset="onReset"
                        showFilterConfiguration="true"
                        filterContainerWidth="17rem">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                id="MainView_FilterGroupItem_01"
                                name="CentroEnt"
                                label="{i18n>centroEnt}"
                                groupName="visibleItems"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <Input
                                        id="filterCentroEnt"
                                        placeholder="{i18n>buscaPorCentro}"
                                        width="400px"
                                        class="sapUiSmallMarginEnd"
                                        liveChange="onFilterLiveChange"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="MainView_FilterGroupItem_02"
                                name="Ticket"
                                label="{i18n>ticket}"
                                groupName="visibleItems"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <Input
                                        id="filterTicket"
                                        placeholder="{i18n>buscaPorTicket}"
                                        width="400px"
                                        class="sapUiSmallMarginEnd"
                                        liveChange="onFilterLiveChange"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="MainView_FilterGroupItem_03"
                                name="CentroSal"
                                label="{i18n>centroSal}"
                                groupName="visibleItems"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <Input
                                        id="filterCentroSal"
                                        placeholder="{i18n>buscaPorCentroSal}"
                                        width="400px"
                                        class="sapUiSmallMarginEnd"
                                        liveChange="onFilterLiveChange"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                id="MainView_FilterGroupItem_04"
                                name="Material"
                                label="{i18n>materia}"
                                groupName="visibleItems"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <Input
                                        id="filterMateria"
                                        placeholder="{i18n>buscaPorMateria}"
                                        width="400px"
                                        class="sapUiSmallMarginEnd"
                                        liveChange="onFilterLiveChange"/>
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox
                width="100%"
                class="sapUiMediumMargin">
                <Title
                    text="{i18n>tableTitle}"
                    level="H2"
                    class="sapUiTinyMarginBottom"/>
                <Table
                    id="itemsTable"
                    items="{zbasc>/Z_ALTA_Set}"
                    growing="true"
                    growingThreshold="20"
                    mode="SingleSelectMaster"
                    selectionChange="onRowSelectionChange">
                    <columns>
                        <Column>
                            <Text text="{i18n>folio}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>ticket}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>centroEnt}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>centroSal}"/>
                        </Column>
                        <Column>
                            <Text text="{i18n>materia}"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{zbasc>Folio}"/>
                                <Text text="{zbasc>Tipoticket}"/>
                                <Text text="{zbasc>CentroEnt}"/>
                                <Text text="{zbasc>CentroSal}"/>
                                <Text text="{zbasc>Material}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>