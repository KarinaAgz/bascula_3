<mvc:XMLView 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    controllerName="delmex.bascula3.controller.Details">
    <Page 
        title="{i18n>title}" 
        showNavButton="true" 
        navButtonPress="goBackBtn">
        <content>
            <VBox class="sapUiSmallMargin">
                <Title 
                    text="Detalle del Folio: {zbasc>/Folio}" 
                    level="H2" 
                    class="sapUiMediumMarginBottom"/>
                <form:SimpleForm 
                    editable="false" 
                    layout="ResponsiveGridLayout" 
                    labelSpanXL="4" 
                    labelSpanL="4" 
                    labelSpanM="4" 
                    labelSpanS="12" 
                    adjustLabelSpan="false" 
                    columnsXL="2" 
                    columnsL="2" 
                    columnsM="1">
                    <form:content>
                        <core:Title text="Información General"/>
                        <Label text="Tipo ticket"/>
                        <Text text="{ path: 'zbasc>/Tipoticket', formatter: '.defaultText' }"/>
                        <Label text="Centro entrada"/>
                        <Text text="{ path: 'zbasc>/CentroEnt', formatter: '.defaultText' }"/>
                        <Label text="Centro salida"/>
                        <Text text="{ path: 'zbasc>/CentroSal', formatter: '.defaultText' }"/>
                        <Label text="Material"/>
                        <Text text="{ path: 'zbasc>/Material', formatter: '.defaultText' }"/>
                        <Label text="Conductor"/>
                        <Text text="{ path: 'zbasc>/Conductor', formatter: '.defaultText' }"/>
                        <Label text="Placa"/>
                        <Text text="{ path: 'zbasc>/Placa', formatter: '.defaultText' }"/>

                        <core:Title text="Datos de Pesaje"/>
                        <Label text="Báscula Entrada"/>
                        <Text text="{ path: 'zbasc>/BasculaEnt', formatter: '.defaultText' }"/>
                        <Label text="Báscula Salida"/>
                        <Text text="{ path: 'zbasc>/BasculaSal', formatter: '.defaultText' }"/>
                        <Label text="Pesaje 1 en kg"/>
                        <Text text="{ path: 'zbasc>/Pesaje', formatter: '.defaultText' }"/>
                        <Label text="Pesaje 2 en kg"/>
                        <Text text="{ path: 'zbasc>/Pesaje2', formatter: '.defaultText' }"/>
                        <Label text="Peso Neto"/>
                        <Text text="{ path: 'zbasc>/PesoNeto', formatter: '.defaultText' }"/>
                        <Label text="Peso Teórico"/>
                        <Text text="{ path: 'zbasc>/PesoTeorico', formatter: '.defaultText' }"/>
                        <Label text="Diferencia"/>
                        <Text text="{ path: 'zbasc>/Diferencia', formatter: '.defaultText' }"/>

                        <core:Title text="Fechas y Proceso"/>
                        <Label text="Fecha Entrada Báscula"/>
                        <Text text="{ path: 'zbasc>/FechaEntBas', formatter: '.formatDateTime' }"/>
                        <Label text="Fecha Salida Báscula"/>
                        <Text text="{ path: 'zbasc>/FechaSalBas', formatter: '.formatDateTime' }"/>
                        <Label text="Proceso"/>
                        <Text text="{ path: 'zbasc>/Proceso', formatter: '.defaultText' }"/>
                        <Label text="Número Documento"/>
                        <Text text="{ path: 'zbasc>/NumeroDoc', formatter: '.defaultText' }"/>

                        <core:Title text="Resultados"/>
                        <Label text="Valor"/>
                        <Text text="{ path: 'zbasc>/Valor', formatter: '.defaultText' }"/>
                        
                        <Label text="Mensaje"/>
                        <Text text="{ path: 'zbasc>/Mensaje', formatter: '.defaultText' }"/>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:XMLView>